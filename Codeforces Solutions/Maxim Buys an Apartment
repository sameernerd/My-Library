	public static void solve(String s){
	}
	public static void main(String[] args) throws IOException{
		int n=in.nextInt();
		int k=in.nextInt();
		if(n==k)out.println(0+" "+0);
		else if(k==0)out.println(0+" "+0);
		else{
			if(n/3>=k)out.println(1+" "+(2*k));
			else out.print(1+" "+(n-k));
		}
	}	
}
